@* Index.cshtml *@
@model IEnumerable<WorldForge.Web.Models.WorldNote>

@{
    ViewData["Title"] = "World Notes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">🌐 World Notes</h2>
    <a class="btn btn-primary" asp-action="Create">➕ Add New Note</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No world notes found. Start by adding one!
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var note in Model)
        {
            <div class="col">
                <div class="card glossy h-100  border-0">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold mb-1">@note.Title</h5>
                        <p class="card-text text-muted" style="min-height: 4.5em;">
                            @(!string.IsNullOrWhiteSpace(note.Summary) ? note.Summary : "No summary available.")
                        </p>
                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <span class="badge bg-secondary">@note.Category</span>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Details" asp-route-id="@note.Id" class="btn btn-outline-secondary">View</a>
                                <a asp-action="Edit" asp-route-id="@note.Id" class="btn btn-outline-primary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@note.Id" class="btn btn-outline-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
