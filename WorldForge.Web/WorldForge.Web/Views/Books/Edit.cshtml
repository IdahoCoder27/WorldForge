@model WorldForge.Web.Models.Book

@{
    ViewData["Title"] = "Create Book";
}

<h2 class="fw-bold mb-4">✏️ Edit Book</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Title" class="form-label">Book Title *</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger small" />
                </div>

                <div class="col-md-6">
                    <label asp-for="Genre" class="form-label">Genre</label>
                    <select asp-for="Genre" class="form-select" asp-items="Html.GetEnumSelectList<BookGenre>()"></select>
                    <span asp-validation-for="Genre" class="text-danger small" />
                </div>

                <div class="col-12">
                    <label asp-for="Synopsis" class="form-label">Synopsis</label>
                    <textarea asp-for="Synopsis" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Synopsis" class="text-danger small" />
                </div>

                <div class="col-md-4">
                    <label asp-for="IsSeries" class="form-label">Part of a Series?</label>
                    <div class="form-check mt-1">
                        <input asp-for="IsSeries" class="form-check-input" />
                        <label asp-for="IsSeries" class="form-check-label"></label>
                    </div>
                    <span asp-validation-for="IsSeries" class="text-danger small" />
                </div>

                <div class="col-md-4">
                    <label asp-for="Status" class="form-label">Status</label>
                    <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<BookStatus>()"></select>
                    <span asp-validation-for="Status" class="text-danger small" />
                </div>

                <div class="col-12 d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">← Back to List</a>
                    <button type="submit" class="btn btn-primary">Save Book</button>
                </div>
            </div>
        </form>
    </div>
</div>
