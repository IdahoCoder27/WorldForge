@{
    ViewData["Title"] = "Login";
    var returnUrl = ViewData["ReturnUrl"] as string ?? "/";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/Login.css" rel="stylesheet" />
</head>
<body>
    <div class="login-container">
        <div class="login-left">
            <form method="post" asp-action="Login" asp-controller="Account" class="login-form">
                <input type="hidden" name="returnUrl" value="@returnUrl" />

                <h2 class="mb-4 fw-bold">Welcome back</h2>
                <p class="mb-4 text-muted">Please enter your details</p>

                <div class="mb-3">
                    <label for="username" class="form-label">Email or Username</label>
                    <input type="text" class="form-control" id="username" name="username" required />
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required />
                </div>

                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="remember" />
                        <label class="form-check-label" for="remember">Remember me</label>
                    </div>
                    <a href="/Account/ForgotPassword" class="text-link">Forgot password?</a>
                </div>

                <button type="submit" class="btn btn-primary">Sign in</button>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger mt-3">Invalid username or password.</div>
                }

                <div class="mt-4 text-center text-link">
                    Don't have an account? <a asp-controller="Account" asp-action="Register">Sign up</a>
                </div>
            </form>
        </div>

        <div class="login-right">
            <h2>Bring your ideas to life.</h2>
            <p>Sign up for free and enjoy access to all features for 30 days. No credit card required.</p>
        </div>
    </div>
</body>
</html>
