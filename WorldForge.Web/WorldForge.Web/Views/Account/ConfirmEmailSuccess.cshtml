@{
    ViewData["Title"] = "Email Confirmed";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <div class="login-container">
        <div class="login-left d-flex flex-column justify-content-center align-items-center p-5">
            <h2 class="fw-bold mb-3 text-success">Email Confirmed</h2>
            <p class="text-muted mb-4 text-center">
                Your email has been successfully confirmed. You can now log in to your account.
            </p>
            <a href="~/Account/Login" class="btn btn-primary">Go to Login</a>
        </div>
        <div class="login-right">
            <h2>Welcome to WorldForge</h2>
            <p>Unleash your imagination. Create vast worlds, complex characters, and deep lore.</p>
        </div>
    </div>
</body>
</html>
