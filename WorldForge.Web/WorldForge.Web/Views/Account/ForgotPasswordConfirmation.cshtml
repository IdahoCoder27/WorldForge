@{
    ViewData["Title"] = "Reset Link Sent";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <div class="login-container">
        <div class="login-left text-center">
            <div class="login-form">
                <h2 class="mb-4 fw-bold">Check your email</h2>
                <p class="text-muted mb-4">If an account with that email exists, we’ve sent a password reset link.</p>
                <a href="/Account/Login" class="btn btn-primary">Return to login</a>
            </div>
        </div>
        <div class="login-right">
            <h2>Almost there</h2>
            <p>Use the link in your inbox to reset your password and get back to building.</p>
        </div>
    </div>
</body>
</html>
