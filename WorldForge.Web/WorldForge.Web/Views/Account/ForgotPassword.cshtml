@using WorldForge.Web.Models.ViewModels
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
    var returnUrl = ViewData["ReturnUrl"] as string ?? "/";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <div class="login-container">
        <div class="login-left">
            <form asp-action="ForgotPassword" method="post" class="login-form">
                <h2 class="mb-4 fw-bold">Forgot your password?</h2>
                <p class="mb-4 text-muted">Enter your email and we’ll send reset instructions.</p>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Send reset link</button>

                <div class="mt-4 text-center text-link">
                    <a href="/Account/Login">Return to login</a>
                </div>
            </form>
        </div>
        <div class="login-right">
            <h2>Password Reset</h2>
            <p>We’ll help you regain access to your account.</p>
        </div>
    </div>
</body>
</html>
