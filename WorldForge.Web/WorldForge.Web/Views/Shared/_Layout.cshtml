@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - WorldForge</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Optional custom stylesheet -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body data-bs-theme="light"> <!-- This gets toggled dynamically -->
    <!-- Top Navigation Bar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom shadow-sm px-3" data-bs-theme="light">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/">🌍 WorldForge</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <p>IsSignedIn = @SignInManager.IsSignedIn(User)</p>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Books" asp-action="Index">Books</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Characters" asp-action="Index">Characters</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="WorldNotes" asp-action="Index">World Notes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Associations" asp-action="Index">Associations</a>
                    </li>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Trait" asp-action="Index">
                                Traits
                            </a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav ms-auto">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item d-flex align-items-center">
                            <span class="nav-link fw-semibold">Welcome @UserManager.GetUserName(User) |</span>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="nav-link btn btn-link text-danger fw-semibold" style="text-decoration: none;">
                                    Logout
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-body fw-semibold" asp-area="" asp-controller="Account" asp-action="Login">
                                Login
                            </a>
                        </li>
                    }
                </ul>
                <button id="themeToggle" class="btn btn-sm btn-outline-secondary" title="Toggle light/dark mode">🌓</button>
            </div>
        </div>
    </nav>


    <!-- Page Content -->
    <main class="container py-4">
        @RenderBody()
    </main>

    <!-- Scripts -->
    <!-- jQuery and Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery Validation + Unobtrusive -->
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>

<script>
    const toggleBtn = document.getElementById('themeToggle');
    const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
    const savedTheme = localStorage.getItem('theme');
    const body = document.body;

    function applyTheme(theme) {
        body.setAttribute('data-bs-theme', theme);
        localStorage.setItem('theme', theme);
    }

    // Initialize theme
    if (savedTheme) {
        applyTheme(savedTheme);
    } else {
        applyTheme(prefersDark ? 'dark' : 'light');
    }

    toggleBtn.addEventListener('click', () => {
        const currentTheme = body.getAttribute('data-bs-theme');
        applyTheme(currentTheme === 'dark' ? 'light' : 'dark');
    });
</script>


