@model WorldForge.Web.Models.Trait

@{
    ViewData["Title"] = "Create Trait";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card bg-dark text-light shadow-lg">
        <div class="card-body">
            <h2 class="mb-4">
                <i class="bi bi-plus-circle-fill text-success"></i> Create New Trait
            </h2>

            <form asp-action="Create">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label for="Type" class="form-label">Trait Type</label>
                        <select asp-for="Type" class="form-select">
                            <option value="">-- Select Trait Type --</option>
                            @foreach (var type in Enum.GetValues(typeof(WorldForge.Web.Models.TraitType)))
                            {
                                <option value="@type">@type</option>
                            }
                        </select>
                        <span asp-validation-for="Type" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save-fill"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
